generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  folders  Folder[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Folder {
  id      Int    @id @default(autoincrement())
  name    String
  ownerId Int
  owner   User   @relation(fields: [ownerId], references: [id])
  files   File[]
}

model File {
  id         Int      @id @default(autoincrement())
  folderId   Int
  folder     Folder   @relation(fields: [folderId], references: [id])
  name       String
  url        String
  size       BigInt
  uploadTime DateTime @default(now())
}
